public class firstOrLast {
    public static void main(String[] args) {

        int arr[]={2,7,4,6};

        if(arr.length>=1) {

            boolean result = (arr[0] == 6 || arr[arr.length-1] == 6);

            System.out.println(result);
        }
        else{
            System.out.println("array length is less than 1");
        }
    }
}
